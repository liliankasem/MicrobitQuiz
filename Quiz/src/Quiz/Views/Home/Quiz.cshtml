@{
    ViewData["Title"] = "Microbit Snowflake Badge";
}
<div style="color:white;">
    <h2>@ViewData["Title"]</h2>
    <h5>@ViewData["Token"]</h5>

    <iframe width="100%" height="500" src="https://www.youtube.com/embed/8znu58E7tN8" frameborder="0" allowfullscreen></iframe>
    
    <br /><br />

    <table style="width:100%;">
        <tr>
            <td width="50%">
                <a class="btn btn-block btn-default" href="https://www.microbit.co.uk/app/#edit:294fed68-4bd4-4c70-1a54-22b47dfffdeb:vvSUppbCMHkNWpnE">Start Tutorial</a>
            </td>
            <td width="50%">
                <button class="btn btn-block btn-default" onclick="startQuiz()">Start Quiz</button>
            </td>
        </tr>
    </table>

</div>

<br />

<div id="bodyContainer" ng-app="QuizApp" style="display: none;" >
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="text-center col-md-12" ng-controller="QuizCtrl" ng-init="checkQuestions()">
                    <p class="lead">Score: {{score}} | Attempts: {{attempt}}</p>
                    <p class="lead">{{title}}</p>
                    <div class="row text-center">
                        <button class="btn btn-info btn-lg option" ng-repeat="option in options" ng-click="checkAnswer(option)" ng-disabled="disabled">{{option.Title}}</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    function startQuiz() {
        document.getElementById('bodyContainer').style.display = "block";
    }
</script>